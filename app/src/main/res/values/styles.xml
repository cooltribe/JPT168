<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#cc0033</item>
    </style>

    <style name="title_theme" parent="@android:style/Theme.Light">
        <item name="android:windowTitleSize">50.0dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
    <style name="customDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/dialog_scale_show_animation</item>
    </style>

    <style name="dialog_scale_show_animation">
        <item name="@android:windowEnterAnimation">@anim/customdialog_show</item>
        <item name="@android:windowExitAnimation">@anim/customdialog_dismiss</item>
    </style>
    <style name="reserve_search_order_bottom">
        <item name="android:textSize">@dimen/pre_next_date_size</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>
    <!--  横向radiogroup -->
    <style name="tab_item_text_style">
        <item name="android:textSize">12.0sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="nav">
        <item name="android:textAppearance">@style/tab_item_text_style</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">7.0dip</item>
        <item name="android:drawablePadding">5.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>
