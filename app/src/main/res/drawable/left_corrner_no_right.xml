<?xml version="1.0" encoding="utf-8"?>
<!-- 左边带圆角 红色背景 红色边框 无右边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#ff0000" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="0.1dp"
                     android:bottomRightRadius="0.1dp" android:bottomLeftRadius="10dp" />
            <stroke android:width="1dp" android:color="#ffff0000" />
        </shape>
    </item>
    <item android:top="1dp" android:left="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="#FF0000" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="0.1dp"
                     android:bottomRightRadius="0.1dp" android:bottomLeftRadius="10dp" />
            <stroke android:width="1dp" android:color="#ffff0000" />
        </shape>
    </item>
</layer-list>